{
	"manifest_version": 3,
	"name": "BIM Import for BSDD",
	"version": "1.0",
	"description": "Adds an 'Import to BIM' button to BuildingSmart bSDD dictionary pages",
	"permissions": ["activeTab", "storage"],
	"host_permissions": [
		"https://search.bsdd.buildingsmart.org/*",
		"https://identifier.buildingsmart.org/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://search.bsdd.buildingsmart.org/*",
				"https://identifier.buildingsmart.org/*"
			],
			"js": ["content.js"],
			"css": ["styles.css"]
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_title": "BIM Import Settings"
	},
	"icons": {
		"128": "icons/icon128.png"
	}
}
